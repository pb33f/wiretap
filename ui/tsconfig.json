{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "module": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015",
      "es5",
      "es2017"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./build",
    "./dist"
  ]
}